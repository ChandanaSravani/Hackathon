@model IEnumerable<Hackathon.Models.NomineeForm>

@{
    ViewBag.Title = "ListOfNominees";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ListOfNominees</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RWAPosition.PositionName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Qualification)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CurrentOccupation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PreviousRwaMember)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PublicSectorEmployee)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CriminalRecord)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FlatNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Votes)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CandidateName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.RWAPosition.PositionName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Qualification)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CurrentOccupation)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PreviousRwaMember)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PublicSectorEmployee)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CriminalRecord)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FlatNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Votes)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CandidateName)
        </td>
        @if (item!= null)
        {
        <td>
            @Html.ActionLink("Edit", "EditNomineeDetails", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "DeleteNomineeDetails", new { id = item.Id })
        </td>
        }
    </tr>
}

</table>
