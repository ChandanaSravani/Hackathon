@model Hackathon.ViewModel.Nominee_Post_ViewModel

@{
    ViewBag.Title = "NomineeRegister";
}

<h2>Nominee Register</h2>
<h3 style="color:red" >Note: You should be atleast 21 years to nominate</h3>
@using (Html.BeginForm("NomineeRegister","Election",FormMethod.Post)) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model=>model.Nominees.Id)
    <div class="form-group">
        @Html.LabelFor(model => model.Nominees.Qualification, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Nominees.Qualification, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Nominees.Qualification, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Nominees.CurrentOccupation, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Nominees.CurrentOccupation, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Nominees.CurrentOccupation, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Nominees.PreviousRwaMember, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <div class="checkbox">
                @Html.RadioButtonFor(model => model.Nominees.PreviousRwaMember, "True")<span>Yes</span>
                @Html.RadioButtonFor(model => model.Nominees.PreviousRwaMember, "False")<span>No</span>

                @Html.ValidationMessageFor(model => model.Nominees.PreviousRwaMember, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Nominees.PublicSectorEmployee, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <div class="checkbox">
                @Html.RadioButtonFor(model => model.Nominees.PublicSectorEmployee, "True")<span>Yes</span>
                @Html.RadioButtonFor(model => model.Nominees.PublicSectorEmployee, "False")<span>No</span>
                @Html.ValidationMessageFor(model => model.Nominees.PublicSectorEmployee, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Nominees.CriminalRecord, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <div class="checkbox">
                @Html.RadioButtonFor(model => model.Nominees.CriminalRecord, "True")<span>Yes</span>
                @Html.RadioButtonFor(model => model.Nominees.CriminalRecord, "False")<span>No</span>
                @Html.ValidationMessageFor(model => model.Nominees.CriminalRecord, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Nominees.RWAPositionId, "RWAPosition", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.Nominees.RWAPositionId, new SelectList(Model.Positions, "Id", "PositionName"), "---Select Position--- ", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Nominees.RWAPositionId, "", new { @class = "text-danger" })
        </div>
    </div>
    

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Nominate" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
